@model Praise2018.Controllers.Account


    <form action="~/Controllers/AdminController/AddUser" method="post" name="addMember" id="contactForm" novalidate>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                   
                    <input type="text" class="form-control" value="@Model.Name" id="name" required data-validation-required-message="Please enter the name">
                    <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                   <input type="text" class="form-control" value="@Model.Alias" id="alias" required data-validation-required-message="Please enter alias">
                   
                    <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                    @*<button class="btn btn-default dropdown-toggle" type="button"
                            data-toggle="dropdown">
                        Role
                        <span class="caret"></span>
                    </button>*@
                    <select class="form-control">
                        <option>Admin</option>
                        <option>User</option>

                    </select>
                </div>
            </div>

            <div class="clearfix"></div>

        </div>
     
        <button type="submit" class="btn btn-primary">Add</button>
    </form>







